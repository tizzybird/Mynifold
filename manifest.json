{
  "name": "Mynifold",
  "version": "1.1",
  "description": "Help you manage your Youtube tabs.",
  "permissions": [
    "tabs",
    "activeTab",
    "declarativeContent",
    "storage",
    "*://www.youtube.com/watch*",
    "*://youtube.com/watch*"
  ],
  // "content_scripts": [
  //   {
  //     "matches": ["*://www.youtube.com/watch*"],
  //     // "css": ["myStyles.css"],
  //     "js": ["content.js"]
  //   }
  // ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },
  "manifest_version": 2
}
